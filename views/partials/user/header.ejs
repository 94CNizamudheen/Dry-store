<style>
    :root {
        --primary-color: #e52e71;
        --secondary-color: #4f0a27;
        --bg-color: #ffe2f2;
        --text-color: #18181b;
    }

    body {
        font-family: 'Inter', sans-serif;
        background-color: var(--bg-color);
    }

    .modern-ticker {
        background: linear-gradient(90deg, var(--primary-color), var(--secondary-color));
        color: white;
        padding: 12px 0;
        position: relative;
        overflow: hidden;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }

    .ticker-label {
        position: absolute;
        left: 0;
        top: 0;
        bottom: 0;
        background: var(--primary-color);
        color: white;
        padding: 8px 16px;
        font-weight: 600;
        display: flex;
        align-items: center;
        z-index: 10;
    }

    .ticker-content {
        display: inline-block;
        white-space: nowrap;
        position: relative;
        animation: ticker 20s linear infinite;
        padding-left: 120px; /* Space for the label */
    }

    .ticker-content:hover {
        animation-play-state: paused;
    }

    .ticker-item {
        display: inline-block;
        margin-right: 50px;
        opacity: 0.9;
        transition: opacity 0.3s ease;
    }

    .ticker-item:hover {
        opacity: 1;
    }

    .ticker-item span {
        margin-right: 15px;
        font-weight: 300;
    }

    .ticker-item .badge {
        background-color: rgba(255,255,255,0.2);
        margin-right: 10px;
    }

    @keyframes ticker {
        0% {
            transform: translateX(0%);
        }
        100% {
            transform: translateX(-50%);
        }
    }

    @media (max-width: 768px) {
        .ticker-label {
            position: relative;
            width: 100%;
            text-align: center;
            margin-bottom: 10px;
        }

        .ticker-content {
            padding-left: 0;
            animation: ticker 15s linear infinite;
        }
    }
</style>

