<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('/uploads/sample-images/amazonayurvedicoils_35.webp');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Arial', sans-serif;
        }

        .otp-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 400px;
            width: 100%;
        }

        .otp-header {
            background: linear-gradient(to right, #efa1ed, #e52e71);
            color: white;
            text-align: center;
            padding: 20px;
        }

        .form-control {
            border-radius: 25px;
            border: 1px solid #ced4da;
            text-align: center;
        }

        .btn-primary {
            background: linear-gradient(to right, #efa1ed, #e52e71);
            border: none;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: scale(1.05);
        }

        .error-message {
            color: red;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .timer {
            color: #6c757d;
            text-align: center;
            margin-bottom: 15px;
        }

        .resend-link {
            color: #007bff;
            text-decoration: none;
            font-weight: bold;
        }

        .resend-link:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="otp-container">
            <div class="otp-header">
                <h2>OTP Verification</h2>
                <p>Verify your email address</p>
            </div>
            <div class="p-4">
                <p class="text-center text-muted mb-4">Please enter the 6-digit OTP sent to your registered email</p>
                
                <form method="post" action="/forgotPass-otp" id="otpForm" onsubmit="return validateOtpForm()">
                    <div class="mb-3">
                        <input type="text" 
                               required 
                               name="otp" 
                               id="otp" 
                               placeholder="Enter 6-digit OTP" 
                               maxlength="6" 
                               class="form-control" 
                               oninput="this.value = this.value.replace(/[^0-9]/g, '');">
                        <div id="otpError" class="error-message"></div>
                    </div>

                    <div class="timer mb-3">
                        Time remaining: <span id="timer" class="font-weight-bold">1:00</span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Verify OTP</button>
                </form>

                <p class="text-center mt-3">
                    Didn't receive an OTP? 
                    <a href="#" id="resendLink" onclick="resendOtp()" class="resend-link">Resend OTP</a>
                </p>
            </div>
        </div>
    </div>

    <!-- SweetAlert2 for notifications -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        let otpTimerInterval;
        let timer = 60;

        function updateTimerColor(percentage) {
            const timerElement = document.getElementById('timer');
            if (percentage > 50) {
                timerElement.style.color = "green";
            } else if (percentage > 25) {
                timerElement.style.color = "orange";
            } else {
                timerElement.style.color = "red";
            }
        }
        
        function startOtpTimer() {
            const timerElement = document.getElementById('timer');
            otpTimerInterval = setInterval(function() {
                const minutes = Math.floor(timer / 60);
                const seconds = timer % 60;
                timerElement.textContent = `${minutes}:${seconds < 10 ? "0" : ''}${seconds}`;
                updateTimerColor((timer / 60) * 100);
                
                if (--timer < 0) {
                    clearInterval(otpTimerInterval);
                    timerElement.textContent = "Expired";
                    timerElement.style.color = "red";
                }
            }, 1000);
        }

        function initializeOtpTimer() {
            clearInterval(otpTimerInterval);
            timer = 60;
            startOtpTimer();
        }

        window.onload = function() {
            initializeOtpTimer();
        }

        window.validateOtpForm = function() {
            const otpInput = document.getElementById('otp');
            const otpError = document.getElementById('otpError');

            if (otpInput.value.length !== 6) {
                otpError.textContent = 'Please enter a 6-digit OTP';
                return false;
            }

            $.ajax({
                type: "POST",
                url: "/verify-passForgot-otp",
                data: { otp: otpInput.value },
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: "success",
                            title: "OTP verified successfully",
                            showConfirmButton: false,
                            timer: 1500,
                            position: 'center',
                            toast: true,
                            background: 'purple',
                            color:"gold"
                        }).then(() => {
                            window.location.href = response.redirectUrl;
                        });
                    } else {
                        otpError.textContent = 'Invalid OTP. Please try again.';
                    }
                },
                error: function() {
                    otpError.textContent = 'Error verifying OTP. Please try again.';
                }
            });

            return false;
        }

        window.resendOtp = function() {
            clearInterval(otpTimerInterval);  
            initializeOtpTimer();  
            
            $.ajax({
                type: "POST",
                url: "/resend-forgot-otp", 
                success: function(response) {
                    if (response.success) {
                        Swal.fire({
                            icon: "info",
                            title: "OTP Resent",
                            text: "A new OTP has been sent to your registered email.",
                            timer: 2500,
                            showConfirmButton: false,
                            position: 'center',
                            toast: true,
                            background: 'purple',
                            color:"gold"
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Failed to resend OTP",
                            text: response.message,
                            position: 'center',
                            toast: true,
                            background: 'purple',
                            color:"gold"
                        });
                    }
                },
                error: function() {
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: "Failed to resend OTP. Please try again later.",
                        position: 'center',
                        toast: true,
                        background: 'purple',
                        color:"gold"
                    });
                }
            });
        }
    </script>
</body>
</html>