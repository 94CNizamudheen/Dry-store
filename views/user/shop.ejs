    <script>
        // Frontend JavaScript
        document.addEventListener('DOMContentLoaded', function() {
            document.addEventListener('click', async function(e) {
                if (e.target && e.target.id === 'addToCartButton') {
                    e.preventDefault();
                    
                    const button = e.target;
                    const productId = button.dataset.productId;
                    const quantity = 1;
                    
                    // Disable button during request
                    button.disabled = true;
                    
                    try {
                        const response = await fetch('/add-to-cart', {
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ productId, quantity })
                        });
                        
                        const data = await response.json();
                        
                        if (!response.ok) {
                            throw new Error(data.message || 'Failed to add item to cart');
                        }
        
                        if (data.success) {
                            // Show appropriate message based on whether item was added or already exists
                            Swal.fire({
                                title: data.isExisting ? 'Notice!' : 'Success!',
                                text: data.message,
                                icon: data.isExisting ? 'info' : 'success',
                                timer: data.isExisting ? null : 2000,
                                showConfirmButton: data.isExisting
                            });
                            
                            if (!data.isExisting) {
                                // Update cart count only if it's a new item
                                const cartCountElement = document.querySelector('.cart-count');
                                if (cartCountElement) {
                                    cartCountElement.textContent = data.cartCount;
                                }
                            }
                            
                            // Update stock display if it exists
                            if (data.remainingStock !== undefined) {
                                const stockElement = document.querySelector(`[data-stock-id="${productId}"]`);
                                if (stockElement) {
                                    stockElement.textContent = `Stock: ${data.remainingStock}`;
                                }
                            }
                        }
                    } catch (error) {
                        let errorMessage = error.message;
                        
                        if (response?.status === 401) {
                            errorMessage = 'Please login to add items to cart';
                            // Redirect to login page after error message
                            setTimeout(() => {
                                window.location.href = '/login';
                            }, 2000);
                        }
                        
                        Swal.fire({
                            title: 'Error!',
                            text: errorMessage,
                            icon: 'error'
                        });
                    } finally {
                        // Re-enable button after request
                        button.disabled = false;
                    }
