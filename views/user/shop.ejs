<script>
   document.addEventListener('DOMContentLoaded', function () {
    document.addEventListener('click', async function (e) {
        if (e.target && e.target.id === 'addToCartButton') {
            e.preventDefault();

            const button = e.target;
            const productId = button.dataset.productId;

            // Get stock element
            const stockElement = document.querySelector(`[data-stock-id="${productId}"]`);
            let stock = null;

            if (stockElement) {
                const stockText = stockElement.textContent.match(/Stock left:\s*(\d+)/);
                stock = stockText ? parseInt(stockText[1], 10) : null;
            }

            console.log(`Stock for product ${productId}:`, stock);

            if (stock === 0) {
                console.log('Product is out of stock');
                Swal.fire({
                    title: 'Out of Stock',
                    text: 'This product is currently out of stock.',
                    icon: 'warning',
                    confirmButtonText: 'Okay',
                });
                return; // Stop further execution
            }

            // Disable button during request
            button.disabled = true;

            try {
                const response = await fetch('/add-to-cart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ productId, quantity: 1 }),
                });

                console.log('Response status:', response.status);

                const data = await response.json();

                if (!response.ok) {
                    console.error('Response not OK:', data);
                    throw new Error(data.message || 'Failed to add item to cart');
                }

                if (data.success) {
                    console.log('Product added to cart:', data);
                    Swal.fire({
                        title: data.isExisting ? 'Notice!' : 'Success!',
                        text: data.message,
                        icon: data.isExisting ? 'info' : 'success',
                        timer: data.isExisting ? null : 2000,
                        showConfirmButton: data.isExisting,
                    });

                    // Update cart count if new item
                    if (!data.isExisting) {
                        const cartCountElement = document.querySelector('.cart-count');
                        if (cartCountElement) {
                            cartCountElement.textContent = data.cartCount;
                        }
                    }

                    // Update stock display
                    if (data.remainingStock !== undefined && stockElement) {
                        stockElement.textContent = `Stock left: ${data.remainingStock}`;
                    }
                }
            } catch (error) {
                console.error('Error occurred:', error.message);

                const errorMessage = response?.status === 401
                    ? 'Please login to add items to cart'
                    : error.message;

                Swal.fire({
                    title: 'Error!',
                    text: errorMessage,
                    icon: 'error',
                });

                if (response?.status === 401) {
                    setTimeout(() => {
                        window.location.href = '/login';
                    }, 2000);
                }
            } finally {
                // Re-enable button after request
                button.disabled = false;
            }
        }
    });
});

    </script>
    



