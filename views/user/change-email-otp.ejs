<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('/uploads/sample-images/amazonayurvedicoils_35.webp');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Arial', sans-serif;
        }

        .otp-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 400px;
            width: 100%;
        }

        .otp-header {
            background: linear-gradient(to right, #efa1ed, #e52e71);
            color: white;
            text-align: center;
            padding: 20px;
        }

        .form-control {
            border-radius: 25px;
            border: 1px solid #ced4da;
            text-align: center;
        }

        .btn-primary {
            background: linear-gradient(to right, #efa1ed, #e52e71);
            border: none;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: scale(1.05);
        }

        .error-message {
            color: red;
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .timer {
            font-size: 0.9rem;
        }

        .text-muted {
            font-size: 0.875rem;
        }

        .text-primary {
            color: #007bff;
        }
    </style>
</head>

<body>
    <div class="otp-container">
        <div class="otp-header">
            <h3 class="mb-2">OTP Verification</h3>
            <p>Recover your account</p>
        </div>
        <div class="p-4">
            <% if (locals.message && message.length > 0) { %>
                <div class="alert alert-danger" role="alert">
                    <%= message %>
                </div>
            <% } %>
            <form method="post" action="/verify-email-otp" id="otpForm" onsubmit="return validateOtpForm()">
                <div class="mb-3">
                    <input type="text" name="otp" id="otp" placeholder="Enter OTP" maxlength="6" class="form-control">
                    <div id="otpError" class="error-message"></div>
                </div>
                <div class="timer mb-3">
                    <span class="text-muted">Time remaining: <span id="timer" class="font-weight-bold">1:00</span></span>
                </div>
                <button type="submit" class="btn btn-primary w-100">Verify OTP</button>
            </form>
            <p class="text-center mt-3">
                Didnâ€™t receive an OTP? <a href="#" id="resendLink" onclick="resendOtp()" class="text-decoration-none text-primary font-weight-bold">Resend OTP</a>
            </p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script>
        let otpTimerInterval;
        let timer = 60;

        function updateTimerColor(percentage) {
            const timerElement = document.getElementById('timer');
            if (percentage > 50) {
                timerElement.style.color = "green";
            } else if (percentage > 25) {
                timerElement.style.color = "orange";
            } else {
                timerElement.style.color = "red";
            }
        }

        function startOtpTimer() {
            const timerElement = document.getElementById('timer');
            otpTimerInterval = setInterval(function () {
                const minutes = Math.floor(timer / 60);
                const seconds = timer % 60;
                timerElement.textContent = `${minutes}:${seconds < 10 ? "0" : ""}${seconds}`;
                updateTimerColor((timer / 60) * 100);

                if (--timer < 0) {
                    clearInterval(otpTimerInterval);
                    timerElement.textContent = "Expired";
                    timerElement.style.color = "red";
                }
            }, 1000);
        }

        function initializeOtpTimer() {
            clearInterval(otpTimerInterval);
            timer = 60;
            startOtpTimer();
        }

        window.onload = function () {
            initializeOtpTimer();
        }

        window.validateOtpForm = function () {
            const otpInput = document.getElementById('otp').value;

            $.ajax({
                type: "POST",
                url: "/verify-change-email-otp",
                data: { otp: otpInput },
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: "success",
                            title: "OTP verified successfully",
                            showConfirmButton: false,
                            timer: 1500,
                            position: 'center',
                            toast: true,
                        }).then(() => {
                            window.location.href = response.redirectUrl;
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Invalid OTP",
                            text: "Please try again",
                            position: 'center',
                            toast: true,
                        });
                    }
                }
            });

            return false;
        }
        window.resendOtp = function () {
            clearInterval(otpTimerInterval);
            initializeOtpTimer();

            $.ajax({
                type: "POST",
                url: "/resend-verify-email-otp",
                success: function (response) {
                    if (response.success) {
                        Swal.fire({
                            icon: "info",
                            title: "OTP Resent",
                            text: "A new OTP has been sent to your registered email.",
                            timer: 2500,
                            showConfirmButton: false,
                            position: 'center',
                            toast: true,
                        });
                    } else {
                        Swal.fire({
                            icon: "error",
                            title: "Failed to resend OTP",
                            text: response.message,
                            position: 'center',
                            toast: true,
                        });
                    }
                },
                error: function () {
                    Swal.fire({
                        icon: "error",
                        title: "Error",
                        text: "Failed to resend OTP. Please try again later.",
                        position: 'center',
                        toast: true,
                    });
                }
            });
        }
    </script>
</body>

</html>
