<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Page</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        body {
            background-image: url('/uploads/sample-images/close-up-bunch-nuts-dried-fruits-generative-ai_1034459-52273.webp');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Arial', sans-serif;
        }

        .login-container {
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            max-width: 400px;
            width: 100%;
        }

        .login-header {
            background: linear-gradient(to right, #efa1ed, #e52e71);
            color: white;
            text-align: center;
            padding: 20px;
        }

        .form-control {
            border-radius: 25px;
            border: 1px solid #ced4da;
        }

        .btn-login {
            background: linear-gradient(to right, #efa1ed, #e52e71);
            border: none;
            border-radius: 25px;
            transition: all 0.3s ease;
        }

        .btn-login:hover {
            transform: scale(1.05);
        }

        .social-login .btn {
            border-radius: 25px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .divider {
            position: relative;
            text-align: center;
            margin: 20px 0;
        }

        .divider::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            border-top: 1px solid #dee2e6;
            z-index: 1;
        }

        .divider span {
            background: white;
            padding: 0 10px;
            position: relative;
            z-index: 2;
            color: #6c757d;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="login-container">
            <div class="login-header">
                <h2>Welcome Back</h2>
                <p>Login to your account</p>
            </div>
            <div class="p-4">
                <% if (message) { %>
                    <div class="alert alert-danger text-center">
                        <%= message %>
                    </div>
                    <% } %>
                        <form action="/logIn" method="POST" onsubmit="return validateEmail()">
                        <div class="mb-3">
                            <input class="form-control" id="email" name="email" placeholder="Email" type="text"required>
                            <span id="emailError" class="text-danger font-sm"></span>
                        </div>
                        <div class="mb-3">
                            <input class="form-control" name="password" placeholder="Password" type="password" required>
                        </div>
                        
                        <button type="submit" class="btn btn-login w-100 text-white py-2">
                            Login
                        </button>

                        <div class="divider">
                            <span>or continue with</span>
                        </div>

                        <div class="row social-login g-2">
                            <div class="col-6">
                                <a href="/" class="btn btn-outline-dark w-100">
                                    <i class=" me-2"></i>Guest mode
                                </a>
                            </div>
                            <div class="col-6">
                                <a href="/auth/google" class="btn btn-outline-danger w-100">
                                    <i class="fab fa-google me-2"></i>Google
                                </a>
                            </div>
                        </div>

                        <p class="text-center mt-3 small">
                            Don't have an account? <a href="/signup" class="text-decoration-none">Sign up</a>
                        </p>
                        <p class="text-center mt-1 small">
                            <a href="/forgot-password" class="text-decoration-none">Forgot Password?</a>
                        </p>
                     </form>
            </div>
        </div>
    </div>
    <script>
        function validateEmail() {
            const email = document.getElementById('email').value;
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            if (!emailRegex.test(email)) {
                document.getElementById('emailError').textContent = "Please enter a valid email address";
                return false;
            } else {
                document.getElementById('emailError').textContent = '';
                return true;
            }
        }
    </script>
    <!-- Bootstrap JS (optional) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>