<%- include('../partials/user/header.ejs') %>

    <section class="mt-50 mb-50">
        <div class="container">
            <% if(products.length<=0) {%>
                <div class="text-center my-5">
                    <h2>Your Wishlist is Empty</h2>
                    <p>Looks like you haven't added any items to your cart yet.</p>
                    <a href="/shop" class="btn btn-primary">Continue Shopping</a>
                </div>
                <% }else {%>

                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table shopping-summery text-center">
                                    <thead>
                                        <tr class="main-heading">
                                            <th scope="col" colspan="2">Product</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Stock Status</th>
                                            <th scope="col">Action</th>
                                            <th scope="col">Remove</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% products.forEach(product=> {%>
                                            <tr>
                                                <td class="image product-thumbnail"><img
                                                        src="/uploads/images/<%= product.productImage[0] %>"
                                                        alt="<%= product.productName %>"></td>
                                                <td class="product-des product-name">
                                                    <h5 class="product-name"><a href="shop-product-right.html">
                                                            <%= product.productName %>
                                                        </a></h5>
                                                    <br>
                                                    <p>Added on: <%= new Date(product.addedOn).toLocaleDateString() %>
                                                    </p>
                                                </td>
                                                <td class="price" data-title="Price"><span>
                                                        â‚¹<%= product.salePrice.toFixed(2) %>
                                                    </span></td>
                                                <td class="text-center" data-title="Stock">
                                                    <div
                                                        class="stock-status <%= product.quantity > 0 ? 'in-stock text-success ml-5' : 'text-danger ml-5' %>">
                                                        <%= product.quantity> 0 ? `Stock left: ${product.quantity}`:
                                                            'Out of Stock' %>
                                                    </div>
                                                </td>
                                                <td class="text-right" data-title="Cart">
                                                    <% if (product.quantity> 0) {%>

                                                        <div class="product-action-1 show">
                                                            <a aria-label="Add To Cart" class="action-btn hover-up"
                                                                href="javascript:void(0);" id="addToCartButton"
                                                                data-product-id="<%= product._id %>">
                                                                <i class="fi-rs-shopping-bag-add"></i>
                                                            </a>
                                                        </div>
                                                        <% } %>
                                                </td>
                                                <td class="remove text-center">
                                                    <button type="button"
                                                        class="btn btn-danger btn-sm remove-from-wishlist"
                                                        data-product-id="<%= product._id %>">
                                                        <i class="fas fa-trash-alt"></i> Remove
                                                    </button>
                                                </td>
                                            </tr>

                                            <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <% } %>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.querySelectorAll('.remove-from-wishlist').forEach((button) => {
            button.addEventListener('click', async (event) => {
                const productId = button.getAttribute('data-product-id');
                try {
                    const response = await fetch('/removeFromWishlist', {
                        method: "DELETE",
                        headers: {
                            'Content-Type': "application/json",
                        },
                        body: JSON.stringify({ productId })
                    });
    
                    const result = await response.json();
                    console.log('result:', result);
    
                    if (response.ok) {
                        Swal.fire({
                            title: 'Success',
                            text: result.message,
                            icon: 'success',
                            toast: true,
                            position: "center",
                            timer: 2000,
                            showConfirmButton: false,
                        }).then(() => {
                            location.reload(); 
                        });
                    } else {
                        Swal.fire({
                            title: "Error",
                            icon: "error",
                            text: "Failed to remove item",
                            toast: true,
                            position: "center",
                            timer: 2000,
                            showConfirmButton: true,
                        });
                    }
                } catch (error) {
                    console.error("Error removing item: ", error);
                    Swal.fire({
                        title: "Error",
                        icon: "error",
                        text: "An error occurred. Please try again.",
                        toast: true,
                        position: "center",
                        timer: 2000,
                        showConfirmButton: true,
                    });
                }
            });
        });
    </script>
    

