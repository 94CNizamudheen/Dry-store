    <style>
        .card.border-success {
            border: 2px solid green;
            background-color: #f7fdf7;
    
        }
    
        .card {
            box-shadow: 5px 5px 10px #ccc, -5px -5px 10px #fff;
            padding: 10px;
        }
    
        .card-title {
            font-weight: bold;
            margin-bottom: 10px;
        }
    
        .wallet-timeline-container {
            display: flex;
            flex-wrap: wrap;
            align-items: flex-start;
            gap: 20px;
        }
    
        .wallet-card {
            flex: 0 0 300px;
            max-width: 300px;
            border-radius: 15px;
            background: #f8f9fa;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
    
        .wallet-card .card-header {
            background-color: #6c757d !important;
            border-radius: 15px 15px 0 0;
            color: white;
        }
    
        .wallet-balance {
            color: #650a5c;
            font-size: 1.5rem;
        }
    
        .checkout-timeline {
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            flex-grow: 1;
            min-width: 300px;
        }
    
        .timeline-connector {
            position: absolute;
            height: 4px;
            background-color: #e9efec;
            top: 30px;
            left: 0;
            right: 0;
            z-index: 0;
        }
    
        .timeline-item {
            display: flex;
            flex-direction: column;
            align-items: center;
            flex: 1;
            position: relative;
            z-index: 1;
        }
    
        .timeline-icon {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #e9ecef;
            color: #6c757d;
            font-size: 24px;
            margin-bottom: 10px;
            transition: all 0.3s ease;
        }
    
        .timeline-item.active .timeline-icon {
            background-color: #349636;
            color: white;
            box-shadow: 0 0 0 4px rgba(0, 123, 255, 0.3);
        }
    
        .timeline-text {
            text-align: center;
            color: #6c757d;
            font-weight: 500;
        }
    
        .timeline-item.active .timeline-text {
            color: #007bff;
            font-weight: bold;
        }
    
        @media (max-width: 992px) {
            .wallet-timeline-container {
                flex-direction: column;
                align-items: center;
            }
    
            .wallet-card {
                max-width: 100%;
                width: 100%;
            }
    
            .checkout-timeline {
                flex-direction: column;
            }
    
            .timeline-connector {
                display: none;
            }
    
            .timeline-item {
                flex-direction: row;
                width: 100%;
                margin-bottom: 15px;
                justify-content: flex-start;
            }
    
            .timeline-icon {
                margin-right: 15px;
                margin-bottom: 0;
            }
    
            .timeline-text {
                text-align: left;
            }
        }
        @media screen and (max-width: 768px) {
    .coupon-input-container {
        flex-direction: column;
        align-items: stretch;
    }

    .coupon-input {
        margin-bottom: 10px;
        width: 100%;
    }

    .coupon-buttons {
        flex-direction: column;
    }

    .btn {
        width: 100%;
        margin-bottom: 10px;
    }

    .btn:last-child {
        margin-bottom: 0;
    }
}

/* Ensuring Full Width on Small Screens */
@media screen and (max-width: 480px) {
